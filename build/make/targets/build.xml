<!-- the main target, that builds the component -->
<project name="BUILD_TARGET">

    <target name="pre_init">
        <!-- empty common filesets, must be defined in component descriptors -->
        <fileset id="c.fileset" dir="." includes="empty_fileset" />
        <fileset id="cpp.fileset" dir="." includes="empty_fileset" />
        <fileset id="asm.fileset" dir="." includes="empty_fileset" />
        <compiler id="common.compiler" />
        <compiler id="common.c.compiler" />
        <compiler id="common.cpp.compiler" />

        <path id="java.class.path">
            <pathelement location="." />
        </path>

        <!-- defines empty BootCP to allow later redefinition if required -->
        <path id="java.boot.class.path">
            <pathelement location="" />
        </path>

        <linker id="common.linker" />

        <!-- empty common ids, must be defined in component descriptors -->
        <!--path id="java.source">
            <pathelement location="." />
        </path-->

        <patternset id="java.classes.pattern" includes="empty_pattern" />
    </target>
    
    <target name="init_component" depends="pre_init, init" />
    
    <target name="build"
            depends="build.java,
                     build.jar,
                     build.native" />
</project>
